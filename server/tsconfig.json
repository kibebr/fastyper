{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
 
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,                        
    "noImplicitAny": true,                 
    "strictNullChecks": true,             
    "noImplicitThis": true,               
    "alwaysStrict": true
  }  
}
